<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.FinishActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/exercisebg"
            android:id="@+id/backgroundImg3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/background_image"/>

    <TextView
            android:text="@string/empty"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchLeagueTxt"
            app:layout_constraintStart_toEndOf="@+id/backgroundImg3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/backgroundImg3"
            app:layout_constraintTop_toBottomOf="@+id/backgroundImg3"
            app:layout_constraintBottom_toTopOf="@+id/backgroundImg3"
            tools:text="Looking for a co-ed beginner league near you"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:singleLine="false"
            android:textAlignment="center"
            app:layout_constraintVertical_bias="0.55"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/searchLeagueTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>